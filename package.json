{
  "name": "solid-dollar",
  "version": "0.5.4",
  "description": "object style hooks / i18n / global state management for solid.js",
  "license": "MIT",
  "author": "subframe7536",
  "repository": "https://github.com/subframe7536/solid-dollar.git",
  "homepage": "https://github.com/subframe7536/solid-dollar#readme",
  "bugs": {
    "url": "https://github.com/subframe7536/solid-dollar/issues"
  },
  "files": [
    "dist",
    "directive.d.ts"
  ],
  "private": false,
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index/index.cjs",
  "module": "./dist/index/index.js",
  "types": "./dist/index/index.d.ts",
  "browser": {},
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index/index.d.ts",
        "default": "./dist/index/index.js"
      },
      "require": {
        "types": "./dist/index/index.d.cts",
        "default": "./dist/index/index.cjs"
      }
    },
    "./i18n": {
      "import": {
        "types": "./dist/i18n/index.d.ts",
        "default": "./dist/i18n/index.js"
      },
      "require": {
        "types": "./dist/i18n/index.d.cts",
        "default": "./dist/i18n/index.cjs"
      }
    },
    "./plugin": {
      "import": {
        "types": "./dist/plugin/index.d.ts",
        "default": "./dist/plugin/index.js"
      },
      "require": {
        "types": "./dist/plugin/index.d.cts",
        "default": "./dist/plugin/index.cjs"
      }
    },
    "./state": {
      "import": {
        "types": "./dist/state/index.d.ts",
        "default": "./dist/state/index.js"
      },
      "require": {
        "types": "./dist/state/index.d.cts",
        "default": "./dist/state/index.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils/index.d.ts",
        "default": "./dist/utils/index.js"
      },
      "require": {
        "types": "./dist/utils/index.d.cts",
        "default": "./dist/utils/index.cjs"
      }
    },
    "./i18n/utils": {
      "import": {
        "types": "./dist/i18n/utils.d.ts",
        "default": "./dist/i18n/utils.js"
      },
      "require": {
        "types": "./dist/i18n/utils.d.cts",
        "default": "./dist/i18n/utils.cjs"
      }
    }
  },
  "typesVersions": {
    "*": {
      "i18n": [
        "./dist/i18n/index.d.ts"
      ],
      "plugin": [
        "./dist/plugin/index.d.ts"
      ],
      "state": [
        "./dist/state/index.d.ts"
      ],
      "utils": [
        "./dist/utils/index.d.ts"
      ],
      "i18n/utils": [
        "./dist/i18n/utils.d.ts"
      ]
    }
  },
  "scripts": {
    "dev": "vite serve dev --open",
    "build": "node scripts/update-auto-import.js && eslint src/plugin/auto-import.ts --fix && tsup",
    "test": "vitest --run",
    "release": "pnpm test && pnpm lint && pnpm build && bumpp --all && npm publish",
    "lint": "pnpm lint:code && pnpm lint:types",
    "lint:code": "eslint --ignore-path .gitignore --max-warnings 0 src/**/*.{js,ts,tsx,jsx} --fix",
    "lint:types": "tsc --noEmit",
    "format": "eslint . --fix"
  },
  "peerDependencies": {
    "idb-keyval": "^6.2.1",
    "solid-js": "^1.7.12"
  },
  "dependencies": {
    "@solid-primitives/deep": "^0.2.4",
    "@solid-primitives/event-listener": "^2.3.0",
    "@subframe7536/type-utils": "^0.1.1",
    "klona": "^2.0.6",
    "object-standard-path": "^0.3.0"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.4",
    "@subframe7536/eslint-config": "^0.2.9",
    "bumpp": "^9.2.0",
    "eslint": "^8.51.0",
    "idb-keyval": "^6.2.1",
    "jsdom": "^22.1.0",
    "tsup": "^7.2.0",
    "tsup-preset-solid": "^2.1.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-solid": "^2.7.0",
    "vitest": "0.34.2",
    "vitest-indexeddb": "^0.0.0",
    "yaml": "^2.3.2"
  },
  "keywords": [
    "solid",
    "hooks"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
