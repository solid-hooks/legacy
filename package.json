{
  "name": "solid-dollar",
  "version": "0.4.0",
  "description": "object style hooks / i18n / global state management for solid.js",
  "license": "MIT",
  "author": "subframe7536",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/subframe7536/solid-dollar.git"
  },
  "homepage": "https://github.com/subframe7536/solid-dollar#readme",
  "bugs": {
    "url": "https://github.com/subframe7536/solid-dollar/issues"
  },
  "files": [
    "dist",
    "directive.d.ts"
  ],
  "private": false,
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index/index.cjs",
  "module": "./dist/index/index.js",
  "types": "./dist/index/index.d.ts",
  "browser": {},
  "exports": {
    ".": {
      "development": {
        "import": {
          "types": "./dist/index/index.d.ts",
          "default": "./dist/index/dev.js"
        },
        "require": {
          "types": "./dist/index/index.d.cts",
          "default": "./dist/index/dev.cjs"
        }
      },
      "import": {
        "types": "./dist/index/index.d.ts",
        "default": "./dist/index/index.js"
      },
      "require": {
        "types": "./dist/index/index.d.cts",
        "default": "./dist/index/index.cjs"
      }
    },
    "./i18n-util": {
      "development": {
        "import": {
          "types": "./dist/i18n-util/index.d.ts",
          "default": "./dist/i18n-util/dev.js"
        },
        "require": {
          "types": "./dist/i18n-util/index.d.cts",
          "default": "./dist/i18n-util/dev.cjs"
        }
      },
      "import": {
        "types": "./dist/i18n-util/index.d.ts",
        "default": "./dist/i18n-util/index.js"
      },
      "require": {
        "types": "./dist/i18n-util/index.d.cts",
        "default": "./dist/i18n-util/index.cjs"
      }
    },
    "./plugin": {
      "development": {
        "import": {
          "types": "./dist/plugin/index.d.ts",
          "default": "./dist/plugin/dev.js"
        },
        "require": {
          "types": "./dist/plugin/index.d.cts",
          "default": "./dist/plugin/dev.cjs"
        }
      },
      "import": {
        "types": "./dist/plugin/index.d.ts",
        "default": "./dist/plugin/index.js"
      },
      "require": {
        "types": "./dist/plugin/index.d.cts",
        "default": "./dist/plugin/index.cjs"
      }
    }
  },
  "typesVersions": {
    "*": {
      "i18n-util": [
        "./dist/i18n-util/index.d.ts"
      ],
      "plugin": [
        "./dist/plugin/index.d.ts"
      ]
    }
  },
  "scripts": {
    "dev": "vite serve dev --open",
    "build": "node scripts/update-auto-import.js && eslint src/plugin/auto-import.ts --fix && tsup",
    "test": "vitest --run",
    "test:bench": "vitest bench --run",
    "release": "pnpm test && pnpm lint && pnpm build && bumpp --all && npm publish",
    "lint": "pnpm lint:code && pnpm lint:types",
    "lint:code": "eslint --ignore-path .gitignore --max-warnings 0 src/**/*.{js,ts,tsx,jsx} --fix",
    "lint:types": "tsc --noEmit"
  },
  "peerDependencies": {
    "idb-keyval": "^6.2.1",
    "solid-js": "^1.6.0"
  },
  "dependencies": {
    "@solid-primitives/deep": "^0.2.3",
    "object-standard-path": "^0.3.0"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.4",
    "@subframe7536/eslint-config": "^0.2.6",
    "bumpp": "^9.2.0",
    "eslint": "^8.48.0",
    "idb-keyval": "^6.2.1",
    "jsdom": "^22.1.0",
    "tsup": "^7.2.0",
    "tsup-preset-solid": "^2.1.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-solid": "^2.7.0",
    "vitest": "0.34.2",
    "vitest-indexeddb": "^0.0.0",
    "yaml": "^2.3.2"
  },
  "keywords": [
    "solid",
    "hooks"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
